	<level title="BASINGSTOKE" colors="earth.01.colors" world="earth.world" scenery="earth.scenery.base" formation="1" >
		<story setting="earth.weapon.setting">
			<char id="earth.blaster.char">[stats:blaster.building.spec]</char>
			<char id="earth.custerd-left.char">a formation of vile titan scum are approaching FROM THE NORTH.\n\n build your BLASTER TURRETS between us and them.</char>
		</story>
		<story setting="earth.general.setting">
			<char id="earth.custerd.char">DON'T build your blaster turrets directly in front of the advancing aliens!</char>
		</story>
		<event name="hint.scroll" seconds="5" icon="hint.info.layers">
			<hints>
				<array>
					<item><text>USE THE {color:gui-bright}W,A,S,D{color:gui-mid} OR {color:gui-bright}CURSOR KEYS{color:gui-mid} TO SCROLL AROUND. OR JUST {color:gui-bright}MOVE THE MOUSE{color:gui-mid}.</text></item>
				</array>
			</hints>
		</event>
		<event seconds="15" icon="hint.info.layers">
			<hints>
				<array>
					<item><text>THE {color:gui-bright}TITANS{color:gui-mid} ARE APPROACHING FROM THE DIRECTION OF THE {color:gui-bright}RED GLOWING ARROW{color:gui-mid} IN THE NORTH.</text></item>
				</array>
			</hints>
		</event>
	</level>
	
	<level title="BRUSSELS" colors="earth.02.colors" world="earth.world" scenery="earth.scenery.base" formation="11" >
		<story setting="earth.info.setting">
			<char id="earth.info.crystals.char"> </char>
			<char id="earth.custerd.info.char">we'll need MORE MONEY for the war effort!\n\n our r&amp;d eggheads recommend we invest our research budget on REFINERIES to extract wealth from those nearby MINERAL DEPOSITS!</char>
		</story>
	</level>
	
	<level title="SEVILLA" colors="earth.03.colors" world="earth.world" scenery="earth.scenery.desert" formation="11" >
		<story qualifier="!factory" setting="earth.info.setting">
			<char id="earth.info.crystals.char"> </char>
			<char id="earth.custerd.info.char">our scientists are in DESPERATE NEED OF FUNDING!\n\n i strongly suggest you research REFINERIES at the earliest opportunity!</char>
		</story>
		<story qualifier="!factory" setting="earth.gidrah.setting">
			<char id="earth.gidrah.01.char">[stats:gidrah.earth.01.spec]</char>
			<char id="earth.tech-gidrah.char">in the meantime in the face of budget cuts we have analysed the corpses of some of the slain titans and gained a little information on their vital statistics!</char>
		</story>
		<story qualifier="factory" setting="earth.gidrah.setting">
			<char id="earth.gidrah.01.char">[stats:gidrah.earth.01.spec]</char>
			<char id="earth.tech-gidrah.char">we have analysed the corpses of some of the slain titans and gained much valuable information on their vital statistics!</char>
		</story>
		<event name="hint.timer" seconds="20" icon="hint.info.layers">
			<hints>
				<array>
					<item><text>ONCE THE TIMER BAR ON THE RIGHT EMPTIES, THE TITANS WILL BECOME {color:gui-bright}MORE ANGRY!{color:gui-mid} TRY TO MINE ALL THE CRYSTALS {color:gui-bright}QUICKLY!{color:gui-mid}</text></item>
				</array>
			</hints>
		</event>
	</level>
	
	<level title="ZARAGOZA" colors="earth.04.colors" world="earth.world" scenery="earth.scenery.desert" formation="111" >
		<story setting="earth.gidrah.setting">
			<char id="earth.angry.01.char">[stats:angrygidrah.earth.01.spec]</char>
			<char id="earth.tech-gidrah.char">reconnaissance reports EVEN BIGGER TITANS leading the attack columns!\n\n we'll need EXTRA FIREPOWER to hold them back!</char>
		</story>
	</level>
	
	<level title="LYON" colors="earth.05.colors" world="earth.world" scenery="earth.scenery.base" formation="112" >
		<story setting="earth.gidrah.setting">
			<char id="earth.gidrah.02.char">[stats:gidrah.earth.02.spec]</char>
			<char id="earth.tech-gidrah.char">commander, long range scanners have detected a NEW TITAN approaching!\n\n it appears to be SLOWER but TOUGHER than the ones we've seen so far.</char>
		</story>
		<event name="hint.lots_of_refineries" seconds="5" icon="hint.info.layers">
			<hints>
				<array>
					<item><text>BUILD SEVERAL REFINERIES AROUND CRYSTALS - YOU GET A {color:gui-bright}$500 BONUS{color:gui-mid} FOR MINING ALL CRYSTALS BEFORE THE TIMER EXPIRES!</text></item>
				</array>
			</hints>
		</event>
	</level>
	
	<level title="HAMBURG" colors="earth.06.colors" world="earth.world" scenery="earth.scenery.base" formation="1112" >
		<story setting="earth.gidrah.setting">
			<char id="earth.angry.02.char">[stats:angrygidrah.earth.02.spec]</char>
			<char id="earth.tech-gidrah.char">alien autopsies have revealed more information on the biology of our extraterrestrial assailants.</char>
		</story>
	</level>
	
	<level title="WARSAW" colors="earth.07.colors" world="earth.world" scenery="earth.scenery.alpine" formation="1122">
		<story setting="earth.general.setting">
			<char id="earth.custerd.char">WARSAW is under attack! watch out, it seems the clever blighters are USING OUR OWN ROADS to TRAVEL FASTER!\n\n SOLIDARITY and all that!</char>
		</story>
	</level>
	
	<level title="KIRUNA" colors="earth.08.colors" world="earth.world" scenery="earth.scenery.alpine" formation="11122">
		<story setting="earth.general.setting">
			<char id="earth.custerd.char">DAMNED COLD at this time of year at KIRUNA, but that doesn't seem to have slowed the titan advance!\n\n they are attacking in GREATER NUMBERS than ever before!</char>
		</story>
	</level>
	
	<level title="BUDAPEST" colors="earth.09.colors" world="earth.world" scenery="earth.scenery.alpine" formation="11222">
