	<!-- Level definitions -->
	
	<level title="EARTH BASE" colors="titan.01.colors" world="titan.world" scenery="titan.scenery.base" formation="11111">
		<bosses>
			<array>
				<item>gidrah.earth.boss</item>
			</array>
		</bosses>
		<story setting="titan.gidrah.setting">
			<char id="titan.gidrah.01.char">[stats:gidrah.titan.01.spec]</char>
			<char id="titan.tech-gidrah.char">these creatures seem particularly INTELLIGENT, and so we have chosen to give them a faintly ridiculous name to TAUNT them. we must attempt to capture one and INTERROGATE it...</char>
		</story>
		<story setting="titan.gidrah.setting">
			<char id="titan.angry.01.char">[stats:angrygidrah.titan.01.spec]</char>
			<char id="titan.custerd-gidrah.char">perhaps you boffs can lay a TRAP for one of the HATCHLINGS that seem to be accompanying the column leaders?</char>
		</story>
		<story setting="titan.general.setting" qualifier="!psychology">
			<char id="titan.tech.char">that would rather depend on the COFFEE VENDING MACHINE in the XENOPSYCHOLOGY DEPARTMENT being repaired.</char>
		</story>
		<story setting="titan.general.setting" qualifier="psychology,!decoy">
			<char id="titan.tech.char">with a SUITABLY LARGE DOSE OF COFFEE, our brightest minds in the XENOPSCHOLOGY DEPARTMENT may be able to come up with something!</char>
		</story>
		<story setting="titan.general.setting" qualifier="decoy">
			<char id="titan.tech.char">thanks to a SUITABLY LARGE DOSE OF COFFEE, our brightest minds in the XENOPSCHOLOGY DEPARTMENT have hatched a plan!</char>
		</story>
		<story setting="titan.general.setting">
			<char id="titan.custerd.char">well you eggheads get on with your sums while we deal with the MEGATITAN that's just showed up on the SCANNERS!</char>
		</story>
	</level>
	<level title="AGAMEMNON" colors="titan.02.colors" world="titan.world" scenery="titan.scenery.base" formation="111122">
		<story setting="titan.gidrah.setting">
			<char id="titan.gidrah.02.char">[stats:gidrah.titan.02.spec]</char>
			<char id="titan.custerd-gidrah.char">outposts report incoming titans ARMED WITH BLASTERS! though lightweight and fairly slow we cannot afford for them to get TOO CLOSE!</char>
		</story>
		<story setting="titan.gidrah.setting" qualifier="!shieldgenerator">
			<char id="titan.angry.02.char">[stats:angrygidrah.titan.02.spec]</char>
			<char id="titan.custerd-gidrah.char">the leaders are HEAVILY ARMOURED! if only you boffs weren't so preoccupied with PSYCHOLOGY and got on with thinking about FORCEFIELDS or something useful...!</char>
		</story>
		<story setting="titan.gidrah.setting" qualifier="shieldgenerator">
			<char id="titan.angry.02.char">[stats:angrygidrah.titan.02.spec]</char>
			<char id="titan.custerd-gidrah.char">the leaders are HEAVILY ARMOURED! a good thing we've developed FORCEFIELDS to protect our outer defences! XENOPSYCHOLOGY be damned!</char>
		</story>
		<story setting="titan.general.setting">
			<char id="titan.tech.char">we have attached POSITRONIC ELECTRODES to the central nervous system of a captured specimen! let us see what it has to say...</char>
		</story>
		<story setting="titan.captured.setting">
			<char id="captured.gidlet.char">EARTHLINGS! your race is DOOMED! even now our forces muster on the horizon, ready to crush your pitiful incursion! surrender now and we promise to KILL YOU before we EAT YOU!</char>
		</story>
	</level>
	<level title="AJAX" colors="titan.03.colors" world="titan.world" scenery="titan.scenery.base" formation="122444">
		<bosses>
			<array>
				<item>gidrah.earth.boss</item>
				<item>gidrah.earth.boss</item>
			</array>
		</bosses>

		<story setting="titan.gidrah.setting">
			<char id="titan.gidrah.04.char">[stats:gidrah.titan.04.spec]</char>
			<char id="titan.custerd-gidrah.char">watch out commander! two more MEGATITANS have been detected heading our way, and they're being backed by blaster-toting AERIAL SUPPORT!</char>
		</story>
		<story setting="titan.gidrah.setting" qualifier="!shieldgenerator,!laser">
			<char id="titan.angry.04.char">[stats:angrygidrah.titan.04.spec]</char>
			<char id="titan.custerd-gidrah.char">now get those propellerheads downstairs looking at SHIELDING, quick sharp! we're going to need something BETTER THAN BARRICADES to protect ourselves against these!</char>
		</story>
		<story setting="titan.gidrah.setting" qualifier="!shieldgenerator,laser">
			<char id="titan.angry.04.char">[stats:angrygidrah.titan.04.spec]</char>
			<char id="titan.custerd-gidrah.char">now get those propellerheads downstairs looking at SHIELDING, quick sharp! in the meantime try and keep them at bay using long range LASERS!</char>
		</story>
		<story setting="titan.gidrah.setting" qualifier="shieldgenerator,!laser">
			<char id="titan.angry.04.char">[stats:angrygidrah.titan.04.spec]</char>
			<char id="titan.custerd-gidrah.char">get those shields in place before they start blasting! damn and blast though, i wish the BOFFS had investigated long range LASER WEAPONRY sooner!</char>
		</story>
		<story setting="titan.gidrah.setting" qualifier="shieldgenerator,laser">
			<char id="titan.angry.04.char">[stats:angrygidrah.titan.04.spec]</char>
			<char id="titan.custerd-gidrah.char">get those shields in place before they start blasting! pick them off using LASERS before they get close!</char>
		</story>
		<story setting="titan.captured.setting">
			<char id="captured.gidlet.char">EARTHLINGS! resistance is futile! ALL your base are belong to us!</char>
		</story>
	</level>
	<level title="BARBAROSSA" colors="titan.04.colors" world="titan.world" scenery="titan.scenery.base" formation="111223">
		<story setting="titan.gidrah.setting">
			<char id="titan.gidrah.03.char">[stats:gidrah.titan.03.spec]</char>
			<char id="titan.tech-gidrah.char">more BAD NEWS, commander! these HEAVILY ARMOURED tank-like specimens recently caught nearby appear to be armed with POWERFUL LONG RANGE CANNON!</char>
		</story>
		<story setting="titan.gidrah.setting">
			<char id="titan.angry.03.char">[stats:angrygidrah.titan.03.spec]</char>
			<char id="titan.custerd-gidrah.char">lay down explosives to keep the BIG ONES at bay! a shame there won't be any BITS LEFT for the TROPHY CABINET back home...</char>
		</story>
		<story setting="titan.captured.setting">
			<char id="captured.gidlet.char">feeble earth being, i have prepared the oven to ROAST your DESECRATED CORPSE.</char>
		</story>
	</level>
	<level title="DANTE" colors="titan.05.colors" world="titan.world" scenery="titan.scenery.base" formation="1112233">
		<story setting="titan.general.setting">
			<char id="titan.custerd.char">we've given the BOFFS some extra strong COFFEE for the last two days. let's see what they've found out.</char>
		</story>
		<story setting="titan.captured.setting">
			<char id="captured.gidlet.char">EARTHLINGS! we trample your forces and scatter your commanders like cowards! cower in fear as our shadow passes over your trembling forms! NONE SHALL BE SPARED!</char>
		</story>
		<story setting="titan.general.setting">
			<char id="titan.tech.char">i think we may be close to achieving a diplomatic dialogue with the TITANS, general!</char>
		</story>
	</level>
	<level title="HECATE" colors="titan.06.colors" world="titan.world" scenery="titan.scenery.base" formation="4444444">
		<bosses>
			<array>
				<item>gidrah.saturn.boss</item>
			</array>
		</bosses>
		<story setting="titan.general.setting" qualifier="laser">
			<char id="titan.custerd.char">the ELF RADAR has picked up a massive AERIAL ASSAULT heading our way, headed up by a BEHEMOTH! prepare the LASER BATTERIES!</char>
		</story>
		<story setting="titan.general.setting" qualifier="!laser">
			<char id="titan.custerd.char">the ELF RADAR has picked up a massive AERIAL ASSAULT heading our way, headed up by a BEHEMOTH! if only we has LASER TECHNOLOGY to hit them over the mountains!</char>
		</story>
	</level>
	<level title="JUNO" colors="titan.07.colors" world="titan.world" scenery="titan.scenery.base" formation="11113555">
		<story setting="titan.general.setting">
			<char id="titan.custerd.char">commander, defend the base at the HAUNTED WASTES OF JUNO. stay vigilant for WRAITHS! just time for one last stop by the INTERROGATION ROOM...</char>
		</story>
		<story setting="titan.captured.setting">
			<char id="captured.gidlet.char">EARTHLINGS! see how we squeeze your precious COFFEE SUPPLIES like your scrawny throats! even now, the occupants of your warehouses stew slowly in a feast for the honour of the ULTRATITAN!</char>
		</story>
	</level>
	
	
	<level title="TLALOC" colors="titan.08.colors" world="titan.world" scenery="titan.scenery.base" formation="11122444">
		<bosses>
			<array>
				<item>gidrah.moon.boss</item>
			</array>
		</bosses>
		<story setting="titan.general.setting">
			<char id="titan.custerd.char">intelligence reports some blasted incoming SPIDERY THING from mars. let's see if the GEEKS have found any more information out...</char>
		</story>
		<story setting="titan.captured.setting">
			<char id="captured.gidlet.char">your feeble restraints can hold me no longer! i will GORGE on your entrails and DEVOUR your children!</char>
		</story>
		<story setting="titan.general.setting">
			<char id="titan.tech.char">hmm, the captured TITAN is getting increasingly AGITATED! we may need to give it something to CHEW ON to distract it.</char>
		</story>
	</level>

