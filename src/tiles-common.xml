	<animation name="alert.ping.anim">
		
		<label id="start"/>
		
		<alpha alpha="100" d="0"/>
		<scale scale="0.425" d="0"/>

		<frame i="spriteimage.hud.alert.ping.01" d="4" />

		<scale scale="+0.02" d="0"/>		
		<frame i="spriteimage.hud.alert.ping.02" d="4" />

		<scale scale="+0.02" d="0"/>			
		<frame i="spriteimage.hud.alert.ping.03" d="4" />

		<scale scale="+0.02" d="0"/>			
		<frame i="spriteimage.hud.alert.ping.04" d="4" />

		<scale scale="+0.02" d="0"/>			
		<frame i="spriteimage.hud.alert.ping.05" d="4" />

		<scale scale="+0.02" d="0"/>			
		<frame i="spriteimage.hud.alert.ping.06" d="4" />
		
		<scale scale="+0.02"/>
		<frame i="spriteimage.hud.alert.ping.07" d="4" />
		
		<scale scale="+0.02"/>
		<frame i="spriteimage.hud.alert.ping.08" d="4" />
		
		<scale scale="+0.02"/>
		<frame i="spriteimage.hud.alert.ping.09" d="4" />
		
		<scale scale="+0.02"/>
		<alpha alpha="90" d="4"/>

		<scale scale="+0.02"/>
		<alpha alpha="75" d="4"/>
		
		<scale scale="+0.02"/>
		<alpha alpha="55" d="4"/>

		<scale scale="+0.02"/>
		<alpha alpha="30" d="3"/>

		<scale scale="+0.02"/>
		<alpha alpha="10" d="6"/>
	
		<alpha alpha="0" d="10"/>
	
		<goto id="start"/>

	</animation>	


