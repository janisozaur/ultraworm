	<!-- Level definitions -->
	
	<level title="SPACEPORT SALUT" colors="moon.01.colors" world="moon.world" scenery="moon.scenery.base" formation="11">
		<story setting="moon.gidrah.setting">
			<char id="moon.gidrah.01.char">[stats:gidrah.moon.01.spec]</char>
			<char id="moon.custerd-gidrah.char">bagged this BAD BOY myself, coming right for me he was!\n\n yes i've tried MOUNTING HIM, but the devil's just TOO DAMN BIG!</char>
		</story>
	</level>
	<level title="MARE CASEUM" colors="moon.02.colors" world="moon.world" scenery="moon.scenery.base" formation="112">
		<story qualifier="!heavyblaster" setting="moon.general.setting">
			<char id="moon.custerd.char">DAMN AND BLAST! moon base beta report ARMOURED TITANS not far from here, resistant to our blasters!\n\n better get those r&amp;d boffs on the case... we're going to need some BIGGER GUNS!</char>
		</story>
		<story qualifier="heavyblaster" setting="moon.general.setting">
			<char id="moon.custerd.char">DAMN AND BLAST! moon base beta report ARMOURED TITANS not far from here, resistant to our blasters!\n\n good thing those boffs have developed HEAVY BLASTERS to deal with them!</char>
		</story>
	</level>
	<level title="SINUS EDAM" colors="moon.03.colors" world="moon.world" scenery="moon.scenery.base" formation="122">
		<story setting="moon.gidrah.setting">
			<char id="moon.angry.01.char">[stats:angrygidrah.moon.01.spec]</char>
			<char id="moon.custerd-gidrah.char">would you look at the size of that, eh what? ANCIENT REMAINS, the boffs say, dug up from under base edam...\n\n no bloody time for archaeology i told them, THERE'S A WAR ON!</char>
		</story>
	</level>
	<level title="CHEDDARIUM" colors="moon.04.colors" world="moon.world" scenery="moon.scenery.base" formation="1122">
		<story setting="moon.gidrah.setting">
			<char id="moon.gidrah.02.char">[stats:gidrah.moon.02.spec]</char>
			<char id="moon.tech-gidrah.char">these titans appear to generate a form of protective organic quantum field... they're ARMOURED!\n\n our standard blaster technology is HARMLESS to them!</char>
		</story>
	</level>
	<level title="CASEUS MEDII" colors="moon.05.colors" world="moon.world" scenery="moon.scenery.craters" formation="1222">
		<bosses>
			<array>
				<item>gidrah.earth.boss</item>
			</array>
		</bosses>
		<story setting="moon.general.setting">
			<char id="moon.custerd.char">another GIANT TITAN on its way! this should prove no problem eh old boy? i've had the last one we shot STUFFED and placed in TRAFALGAR SQUARE!</char>
		</story>
		<story setting="moon.general.setting">
			<char id="moon.custerd.char">oh, and some wretched egghead tells me the forcefield ARMOUR OF LARGER TITANS may even be nearly impervious to HEAVY BLASTERS!</char>
		</story>
	</level>
	<level title="RIMAE YARG" colors="moon.06.colors" world="moon.world" scenery="moon.scenery.craters" formation="12223">
		<story setting="moon.gidrah.setting">
			<char id="moon.angry.02.char">[stats:angrygidrah.moon.02.spec]</char>
			<char id="moon.tech-gidrah.char">this member of the LORICATUS genus is considerably immense and especially RESILIENT...\n\n and like its smaller cousin, ARMOURED!</char>
		</story>
	</level>
	<level title="LACUS CAMEMBERIUM" colors="moon.07.colors" world="moon.world" scenery="moon.scenery.craters" formation="12233">
		<story setting="moon.gidrah.setting">
			<char id="moon.gidrah.03.char">[stats:gidrah.moon.03.spec]</char>
			<char id="moon.custerd-gidrah.char">watch out for these damn titan vermin...\n\n tough little fellows, and the three eyed freaks GO LIKE THE CLAPPERS!</char>
		</story>
	</level>
	<level title="PANEERIUM" colors="moon.08.colors" world="moon.world" scenery="moon.scenery.craters" formation="112233">
		<story setting="moon.gidrah.setting">
			<char id="moon.angry.03.char">[stats:angrygidrah.moon.03.spec]</char>
			<char id="moon.tech-gidrah.char">further PALEONTOLOGICAL EXCAVATIONS of the fossiliferous strata have unearthed this GARGANTUAN CRANIUM!\n\n we surmise this genus to be INTELLIGENT and HEAVILY ARMOURED!</char>
		</story>
		<story qualifier="blastcannon" setting="moon.general.setting">
			<char id="moon.custerd.char">reckon the only way to teach these chaps a lesson is a dose of the old BLAST CANNON!</char>
		</story>
		<story qualifier="!blastcannon" setting="moon.general.setting">
			<char id="moon.custerd.char">i think we're going to need an EVEN BIGGER BLASTER if we're going to punch through that armour!</char>
		</story>
	</level>
	<level title="STILTONIUM" colors="moon.09.colors" world="moon.world" scenery="moon.scenery.craters" formation="122233">
		<story qualifier="concrete" setting="moon.general.setting">
			<char id="moon.custerd.char">they're coming at us from ALL SIDES again...\n\n remember commander, KEEP CALM and CARRY ON! use those BARRICADES to slow them down.</char>
		</story>
		<story qualifier="!concrete" setting="moon.general.setting">
			<char id="moon.custerd.char">they're coming at us from ALL SIDES again...\n\n reckon we ought perhaps to let that enthusiastic egghead in sector 7g develop his barricades after all eh?</char>
		</story>
	</level>
	<level title="PALUS BRIEUM" colors="moon.10.colors" world="moon.world" scenery="moon.scenery.base" formation="122333">
